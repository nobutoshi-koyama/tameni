<div class="row form">
  <div class="col-lg-12">
    <%= form_for @admin do |f| %>
    
      <h2>登録情報</h2>
      <div class="form-group">
        <div class="col-lg-6">
            <%= f.label :品目 %><br />
          <%= f.text_field :menu, placeholder: "品目", class: "form-control" %>
        </div>
        <div class="col-lg-6">
            <%= f.label :詳細 %>
          <%= f.text_field :detail, placeholder: "詳細", class: "form-control" %>
        </div>
      
      <div class="form-group">
        <%= f.submit "送信", class: "btn btn-primary withripple" %>
      </div>
      </div>
    <% end %>
  </div>
</div>