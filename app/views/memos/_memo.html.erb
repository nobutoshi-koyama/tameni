<div class="row">
  <div class="col s12 m6">
     <div class="card blue-grey darken-1">
       <div class="card-content white-text">
           
               <span class="card-title"><%= memo.title %></span>
                <p><%= memo.text %></p>
                  <br>
                    <div class="memo_image">
                      <% if memo.image.attached? %>
                        <%= image_tag memo.image %>
                      <% end %>
                    </div>
                    
                <span class="name">
                  <span>投稿者 <%= memo.user.name %></span><br>
                  <span>投稿日時 <%= memo.created_at %></span><br>
                </span>
      
      
                <% if memo.comments.exists? %>
                  <i class="material-icons">comment コメントあり</i>
                <% end %>
                
                
        <div class="card-action">
          <%= link_to'詳細', "/memos/#{memo.id}",  class: "waves-effect waves-light btn" %>
         
          <% if current_user.id == 1 %>
            <%= link_to '削除', "/memos/#{memo.id}", method: :delete, class: "waves-effect waves-light btn", data: { confirm: '削除しますか？' } %>
          <% end %>
        </div>
   
       </div>

    </div>
  </div>
</div>