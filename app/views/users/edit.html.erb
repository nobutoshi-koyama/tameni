<div class="row form">
  <div class="col-lg-12">
    <%= form_for current_user do |f| %>
    <h2>プロフィール画像</h2>
      <div class="form-group file">
        <%= f.file_field :image, class: "form-control floating-label", placeholder: "画像アップロード" %>
      </div>
      <h2>登録情報</h2>
      <div class="form-group">
        <div class="col-lg-6">
            <%= f.label :名前 %><br />
          <%= f.text_field :name, placeholder: "名前", class: "form-control" %>
        </div>
        <div class="col-lg-6">
            <%= f.label :屋号 %>
          <%= f.text_field :stage_title, placeholder: "屋号", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-6">
            <%= f.label :営農地（市町村） %>
          <%= f.text_field :address, placeholder: "営農地（市町村)", class: "form-control" %>
        </div>
        <div class="col-lg-6">
            <%= f.label :TEL %>
          <%= f.text_field :tel, placeholder: "TEL", class: "form-control" %>
        </div>
        <div class="col-lg-6">
            <%= f.label :mail %>
          <%= f.text_field :email, placeholder: "e-mail", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "送信", class: "btn btn-primary withripple" %>
      </div>
    <% end %>
  </div>
</div>